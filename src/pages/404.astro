---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="404 - Page Not Found | Kawaii Studio">
  <div class="main-wrapper">
    <aside class="sidebar">
      <div class="logo">
        <img src="/img/logo.png" alt="Kawaii Ko Studios" />
      </div>
      <div class="slogan">
        <img src="/img/cloud.png" alt="Cloud background" />
        <p>Oops! This page<br/>went missing!</p>
      </div>
      <div class="character">
        <img src="/img/char.png" alt="Kawaii character" />
      </div>
    </aside>
    
    <section class="content">
      <h2>404 - Page Not Found</h2>
      <div class="error-message">
        <p>Sorry, the page you're looking for doesn't exist.</p>
        <a href="/" class="home-link">Go Back Home</a>
      </div>
    </section>
  </div>
</BaseLayout>

<style>
  /* Container to hold both sections */
  .main-wrapper {
    display: flex;
    gap: 1rem;
    padding: 0;
    width: 100%;
    min-height: 100%;
  }

  .sidebar {
    background-color: var(--pink-light);
    padding: 2rem 0;
    width: 350px;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2rem;
    flex-shrink: 0;
    border-radius: 0;
  }

  .logo img {
    width: 100%;
    height: auto;
    display: block;
  }

  .slogan {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    width: calc(100% - 4rem);
    height: 200px;
    margin: 0 2rem;
  }

  .slogan img {
    position: absolute;
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .slogan p {
    color: #333;
    font-size: 1.1rem;
    line-height: 1.5;
    position: relative;
    z-index: 1;
    text-align: center;
    padding: 0 2rem;
  }

  .character {
    margin-top: 2rem;
    padding: 0 2rem;
  }

  .character img {
    width: 50%;
    height: auto;
    display: block;
    margin: 0 auto;
  }

  .content {
    flex: 1;
    background-color: var(--pink-light);
    padding: 2rem;
    border-radius: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  .content h2 {
    color: white;
    font-size: 2.5rem;
    text-align: center;
    margin-bottom: 2rem;
    text-shadow: 2px 2px 4px rgba(255, 153, 204, 0.5);
  }

  .error-message {
    text-align: center;
    color: #333;
    font-size: 1.2rem;
    line-height: 1.5;
  }

  .error-message p {
    margin-bottom: 2rem;
  }

  .home-link {
    display: inline-block;
    background-color: var(--green);
    color: white;
    text-decoration: none;
    padding: 1rem 2rem;
    border-radius: 20px;
    font-weight: 500;
    font-size: 1.1rem;
    transition: background-color 0.3s ease, transform 0.3s ease;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
  }

  .home-link:hover {
    background-color: var(--green-dark);
    transform: translateY(-2px);
  }

  @media (max-width: 768px) {
    .main-wrapper {
      flex-direction: column;
      padding: 0;
      gap: 1rem;
      width: 100%;
      max-width: 600px;
      align-items: center;
    }

    .sidebar {
      width: calc(100% - 2rem);
      max-width: 400px;
      padding: 1.5rem;
      gap: 1.5rem;
      margin: 0;
      border-radius: 0;
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    .logo img {
      width: 100%;
    }

    .slogan {
      width: 100%;
      height: 140px;
      padding: 1.5rem 2rem;
    }

    .slogan::before {
      width: 70px;
      height: 70px;
      top: -15px;
      left: 15px;
    }

    .slogan::after {
      width: 50px;
      height: 50px;
      top: -10px;
      right: 25px;
    }

    .slogan .cloud-puff1 {
      width: 60px;
      height: 60px;
      bottom: -8px;
      left: -8px;
    }

    .slogan .cloud-puff2 {
      width: 65px;
      height: 65px;
      bottom: -8px;
      right: -8px;
    }

    .slogan p {
      font-size: 1rem;
    }

    .character img {
      width: 50%;
    }

    .content {
      width: calc(100% - 2rem);
      max-width: 400px;
      padding: 1.5rem;
      border-radius: 0;
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    .content h2 {
      font-size: 2rem;
      margin-bottom: 1.5rem;
      text-align: center;
    }

    .error-message {
      font-size: 1rem;
    }

    .home-link {
      padding: 0.75rem 1.5rem;
      font-size: 1rem;
    }
  }

  @media (max-width: 480px) {
    .sidebar {
      padding: 1rem;
    }

    .logo img {
      width: 100%;
    }

    .slogan {
      width: 100%;
      height: 140px;
    }

    .slogan p {
      font-size: 0.9rem;
      padding: 0 1.5rem;
    }

    .character img {
      width: 50%;
    }

    .content {
      padding: 1rem;
    }

    .content h2 {
      font-size: 1.5rem;
      margin-bottom: 1rem;
    }

    .error-message {
      font-size: 0.9rem;
    }

    .home-link {
      padding: 0.5rem 1.2rem;
      font-size: 0.9rem;
    }
  }
</style>