---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Kawaii Studio" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <header>
      <h1>header</h1>
    </header>
    <nav>
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/members">Members</a></li>
        <li><a href="/commission">Commission</a></li>
        <li><a href="/about">About Us</a></li>
      </ul>
    </nav>
    <main>
      <slot />
    </main>
    <footer>
      <p>Footer</p>
    </footer>
  </body>
</html>

<style>
  :root {
    --pink-light: #ffd4ef;
    --pink: #FFB8D9;
    --pink-dark: #FF99CC;
    --green: #7fdf97;
    --green-dark: #6BC582;
    --gray: #808080;
    --white: #FFFFFF;
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
    display: flex;
    flex-direction: column;
    min-height: 100vh;
  }

  header {
    background-color: var(--pink-light);
    padding: 2rem;
    text-align: center;
    margin: 0;
  }

  header h1 {
    color: white;
    font-size: 2.5rem;
    font-weight: 300;
    text-shadow: 2px 2px 4px rgba(255, 153, 204, 0.5);
  }

  nav {
    background-color: var(--green);
  }

  nav ul {
    list-style: none;
    display: flex;
    justify-content: space-around;
    padding: 0;
    margin: 0;
  }

  nav li {
    flex: 1;
  }

  nav a {
    display: block;
    color: white;
    text-decoration: none;
    padding: 1rem;
    text-align: center;
    font-weight: 500;
    transition: background-color 0.3s ease;
    font-size: 1rem;
  }

  nav a:hover {
    background-color: var(--green-dark);
  }

  main {
    flex: 1;
    background-color: white;
    display: flex;
    padding: 0;
    gap: 0;
    justify-content: center;
  }

  footer {
    background-color: var(--gray);
    color: white;
    text-align: center;
    padding: 2rem;
    font-size: 1.2rem;
  }

  @media (max-width: 768px) {
    body {
      background-color: var(--pink-light);
    }

    header {
      padding: 2rem 1rem;
    }

    header h1 {
      font-size: 2rem;
      text-align: center;
    }

    nav ul {
      flex-wrap: wrap;
      padding: 0 1rem;
    }

    nav li {
      flex: 1 1 50%;
    }

    nav a {
      padding: 0.75rem;
      font-size: 0.9rem;
      text-align: center;
    }

    main {
      flex-direction: column;
      padding: 1rem;
      gap: 0;
      background-color: var(--pink-light);
      align-items: center;
    }

    footer {
      padding: 2rem 1rem;
      font-size: 1rem;
      text-align: center;
    }
  }
</style>